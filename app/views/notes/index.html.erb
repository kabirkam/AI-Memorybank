<%# this is the nav bar  %>


<body class="container inbox-page-1">
  <div>
    <h1 class="container mt-2 p-3"> <strong>My Notes</strong></h1>
    <div class="card-notes">
      <% @notes.each do |note|%>
          <div class="card-note">
            <% if note.user == current_user %>
              <%= link_to note_path(note), data: {turbo_method: :delete}, class: "delete-icon" do %>
                <button class='button-new'>
                    <svg class="svg-notes" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                     <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </button>
              <% end %>
            <% end %>


        <%= link_to note_path(note) do %>
            <img src=<%= (note.sentences[0]) && (note.sentences[0].ai_image.url) ? note.sentences[0].ai_image.url : @loading_pic %>  width="256" height="256">
            <div class="text">
              <%#= link_to note.text.truncate_words(10), note_path(note) %>
              <%= note.text.truncate_words(10) %>
            </div>
        <% end %>
          </div>
      <% end %>
    </div>
    <button class="new-note-btn" style="color: white;"><%= link_to "+Note", new_note_path, {:style=>'color: white;'} %></button>
  </div>
</body>
